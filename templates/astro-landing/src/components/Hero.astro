---
interface Props {
  name: string;
  tagline: string;
  ctaText: string;
  ctaUrl: string;
}

const { name, tagline, ctaText, ctaUrl } = Astro.props;
---

<section class="relative overflow-hidden bg-brand-dark text-white">
  <div class="absolute inset-0 bg-gradient-to-br from-brand-primary/20 to-brand-accent/10"></div>
  <div class="relative mx-auto max-w-5xl px-6 py-24 sm:py-32 lg:py-40 text-center">
    <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight">
      {name}
    </h1>
    {tagline && (
      <p class="mt-6 text-lg sm:text-xl text-white/80 max-w-2xl mx-auto">
        {tagline}
      </p>
    )}
    {ctaText && (
      <div class="mt-10">
        <a
          href={ctaUrl}
          class="inline-block rounded-lg bg-brand-primary px-8 py-3 text-base font-semibold text-white shadow-lg hover:bg-brand-primary/90 transition-colors"
        >
          {ctaText}
        </a>
      </div>
    )}
  </div>
</section>
